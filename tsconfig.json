{
  "compilerOptions": {
    "target": "ES2020",                    // Specify ECMAScript target version
    "module": "commonjs",                   // Specify module code generation
    "rootDir": "./src",                     // Specify the root directory of input files
    "outDir": "./dist",                     // Redirect output structure to the dist folder
    "strict": true,                          // Enable all strict type-checking options
    "esModuleInterop": true,                 // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent file name casing
  },
  "include": ["src/**/*"],                   // Include TypeScript files from the src folder
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
